<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#010101"
    tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar Mensaje a:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#EDEF6C"/>

        <TextView
            android:id="@+id/txtNombreP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#EDEF6C"/>

        <Button
            android:id="@+id/buttonFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:onClick="onMessengerButtonClicked"
            android:text="Enviar por Facebook"
            android:background="#EDEF6C"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:onClick="enviarSMS"
            android:text="Enviar SMS"
            android:background="#EDEF6C"/>
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="Aqui puedes usar gestos: \nSwipe arriba: para enviar mensaje por Facebook \nSwipe abajo: para enviar mensaje por SMS\n"
        android:textColor="#FFFFFF"
        />

    </LinearLayout>
