
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:layout_weight="1"
    android:gravity="center"
    android:background="#010101"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titulomain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido a Muu"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_weight="2"
        android:stretchColumns="1"
        android:gravity="center"
        tools:context=".MainActivity">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1">
    <Button
        android:id="@+id/btnAgregarVaca"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="agregarVaca"
        android:text="\n Agregar\n Vaca\n "
        android:background="#EDEF6C"

        android:drawableTop="@drawable/vaca_icon"/>
            </FrameLayout>
            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1">
    <Button
        android:id="@+id/btnModificarVaca"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="modificarVaca"
        android:text="\nModificar\n Saldos\n"
        android:background="#FA4C5B"
        android:drawableTop="@drawable/saldos_icon"/>
            </FrameLayout>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1">
    <Button
        android:id="@+id/btnVerCalendario"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="verCalendario"
        android:text="\nVer \nCalendario\n"
        android:background="#55D07A"
                android:drawableTop="@drawable/calendar_icon"/>
            </FrameLayout>
            <FrameLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1">
    <Button
        android:id="@+id/btnShowLocation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="mapActivity"
        android:text="\nMostrar \nUbicación\n"
        android:background="#464096"
        android:drawableTop="@drawable/map_icon"
        />
            </FrameLayout>
        </TableRow>

    </TableLayout>


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aqui puedes usar gestos: \nDoble tap: para Agregar una vaca\nMantener presionado: para Modificar los saldos \nSwipe a la derecha: para ver el celendario \nSwipe a la izquierda para ver tu ubicación\n"
        android:textColor="#FFFFFF"
       />

</LinearLayout>

