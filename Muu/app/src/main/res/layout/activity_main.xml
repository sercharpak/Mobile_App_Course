<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAgregarVaca"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="agregarVaca"
        android:text="Agregar Vaca" />
    <Button
        android:id="@+id/btnModificarVaca"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="modificarVaca"
        android:text="Modificar Saldos" />
    <Button
        android:id="@+id/btnVerCalendario"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="verCalendario"
        android:text="Ver Calendario" />
    <Button
        android:id="@+id/btnShowLocation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="mapActivity"
        android:text="Mostrar UbicaciÃ³n" />


</LinearLayout>